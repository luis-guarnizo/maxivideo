</tr>
        <?php if($date_pelicula_actor): ?>
            <?php foreach($date_pelicula_actor as $row): ?>
                <tr>
                    <th><?= $row["id"]?></th>
                    <th><?= $row["nombre"]?></th>
                    <?php endforeach ?>
        <?php else: ?>
